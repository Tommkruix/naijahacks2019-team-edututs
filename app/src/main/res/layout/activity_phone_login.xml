<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codebrainz.campuschat.PhoneLoginActivity"
    android:background="@color/colorPrimaryDark"
    android:paddingLeft="0dp"
    android:paddingRight="0dp">
<EditText
    android:id="@+id/phone_number_input"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_marginStart="17dp"
    android:layout_marginEnd="17dp"
    android:padding="5dp"
    android:layout_alignParentLeft="true"
    style="@style/edittext_style"
    android:focusableInTouchMode="true"
    android:inputType="phone"
    android:hint="+234"
    android:textAllCaps="false"
    android:drawableStart="@drawable/ic_menu_send"
    android:drawableLeft="@drawable/ic_menu_send"
    android:textAlignment="center"/>

    <EditText
        android:id="@+id/verification_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_alignParentLeft="true"
        android:padding="5dp"
        style="@style/edittext_style"
        android:focusableInTouchMode="true"
        android:inputType="phone"
        android:layout_below="@+id/phone_number_input"
        android:hint="Verification Code"
        android:textAllCaps="false"
        android:drawableStart="@drawable/ic_menu_send"
        android:drawableLeft="@drawable/ic_menu_send"
        android:textAlignment="center"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/send_ver_code_button"
        style="@style/button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/verification_code_input"
        android:text="Send Verification Code"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/verify_button"
        style="@style/button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_ver_code_button"
        android:text="Verify"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"/>

</RelativeLayout>
