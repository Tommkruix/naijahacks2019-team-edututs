<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:background="#ededed"
android:paddingTop="10dp"
android:paddingBottom="10dp"
android:paddingLeft="16dp"
android:paddingRight="2dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/a" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="16sp"
                android:text="Username"
                android:textColor="#403f3f"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/user_online_status"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/online"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/user_offline_status"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/offline"
                android:visibility="invisible"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:id="@+id/user_profile_status"
            android:text="Status" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-3dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/request_accept_btn"
                android:text="Accept"
                android:textSize="12sp"
                android:visibility="invisible"
                style="@style/button_accept"
                android:layout_height="20dp" />
            <Button
                android:id="@+id/request_cancel_btn"
                android:text="Cancel"
                android:textSize="12sp"
                android:visibility="invisible"
                style="@style/button_reject"
                android:layout_height="20dp" />
        </LinearLayout>
        <ImageView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="-3.25dp"
            android:layout_marginLeft="1dp"
            android:layout_gravity="center"
            android:background="?android:attr/listDivider"
            android:scaleType="fitXY">
        </ImageView>
    </LinearLayout>

</LinearLayout>

</LinearLayout>