<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2BAACB"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.codebrainz.campuschat.OnlineTestEdePolyQ1"
        tools:showIn="@layout/main_q1_online_test_edepoly">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_score"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="16dp"
                android:text="Score : 0"
                android:textColor="#DC4034"
                android:freezesText="true"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/textView_question_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_question"
                android:fontFamily="sans-serif"
                android:text="Question: 1/x"
                android:layout_marginLeft="16dp"
                android:textColor="#DC4034"
                android:freezesText="true"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/textView_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_question_count"
                android:fontFamily="sans-serif"
                android:text="Mode: "
                android:layout_marginLeft="16dp"
                android:textColor="#DC4034"
                android:freezesText="true"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/textView_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="00:30"
                android:layout_marginTop="-50dp"
                android:layout_gravity="end"
                android:textColor="#DC4034"
                android:freezesText="true"
                android:layout_marginRight="16dp"
                android:textSize="40sp" />
            <TextView
                android:id="@+id/textView_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="32dp"
                android:textSize="20sp"
                android:layout_marginLeft="16dp"
                android:freezesText="true"
                android:layout_above="@id/radio_group"
                android:fontFamily="sans-serif"
                android:layout_marginRight="16dp"
                android:text="Which programming language is most preferred when it comes to general computing.\nWhich programming language is most preferred when it comes to general computing."
                android:textAlignment="center"
                android:textColor="#DC4034"
                android:textStyle="bold" />
            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="32dp"
                android:textColor="#052045"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Option 1"
                    android:fontFamily="sans-serif"
                    android:textColor="#DC4034"
                    android:textStyle="bold"
                    android:layout_marginLeft="16dp"
                    android:freezesText="true"
                    android:id="@+id/radio_button1"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Option 2"
                    android:fontFamily="sans-serif"
                    android:textColor="#DC4034"
                    android:textStyle="bold"
                    android:freezesText="true"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/radio_button2"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Option 3"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:freezesText="true"
                    android:layout_marginLeft="16dp"
                    android:textColor="#DC4034"
                    android:id="@+id/radio_button3"/>
            </RadioGroup>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_confirm_next"
                android:text="Confirm"
                android:textSize="18sp"
                android:freezesText="true"
                style="@style/button_style"
                android:layout_below="@id/radio_group"/>

        </LinearLayout>

    </ScrollView>



</RelativeLayout>